<div class="flex justify-center w-screen">
    <div class="w-full px-2.5 sm:px-0 sm:w-11/12 2xl:w-2/3 grid grid-cols-1 lg:grid-cols-2 gap-8 my-10 lg:my-20">
      <div class="flex justify-center w-full col-span-1">
        <div id="productCarousel" class="carousel slide w-11/12  sm:w-2/3 md:w-1/2 lg:w-5/6  " data-ride="carousel">
          <div class="carousel-inner w-full ">
            <% product.image.forEach(function(image, index) { %>
            <div class="carousel-item w-full  <%= index == 0 ? 'active' : '' %>">
              <img src="https://bahl.fra1.digitaloceanspaces.com<%= image %>.jpg" class="w-full clickable-image" alt="<%= product.name %>">
            </div>
            <% }); %>
          </div>
          <% if (product.image.length > 1) { %>
          <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
          <% } %>
        </div>
      </div>
      <div class="col-span-1 lg:mt-0">
        <div>
          <div class="font-black text-2xl"><%= product.name %></div>
          <div class="product-price border-b border-black mt-3 pb-4">Preis: <span class="darker-price"><%= Array.isArray(product.price) ? product.price.join(', ') : product.price %></span></div>
          <div class="product-comment mt-10">Beschreibung: <%= product.comment %></div>
          <p class="size-instruction mt-5">Wählen Sie Ihre Größe aus:</p>
          <div class="product-sizes border-b border-black pb-5 flex justify-start flex-wrap overflow-auto gap-y-5 items-center">
            <% if (Array.isArray(product.sizes)) { %>
            <div class="product-sizes">
              <% product.sizes.forEach((size, index) => { %>
              <div class="size-option">
                <div class="size-circle" data-size="<%= size %>" data-price="<%= product.price[index + 1] %>" onclick="handleSizeClick(this)">
                  <div class="size-number"><%= size %></div>
                  <div class="size-price"><%= product.price[index + 1] %>€</div>
                </div>
              </div>
              <% }); %>
            </div>
            <% } else if (typeof product.sizes === 'string' && typeof product.price === 'string') { %>
            <% 
              const sizesArray = product.sizes.split(',');
              const pricesArray = product.price.split(',');
              sizesArray.forEach((size, index) => {
                  const sizeParts = size.match(/(\D*)(\d+)(\D*)/);
                  let sizeText = '';
                  let sizeNumber = size;
                  let sizeUnit = '';
                  let sizePrice = pricesArray[index + 1] || product.price;
  
                  if (sizeParts) {
                      [, sizeText, sizeNumber, sizeUnit] = sizeParts;
              }
            %>
            <div class="size-option">
              <% if (sizeText) { %>
              <div class="size-text"><%= sizeText.trim() %></div>
              <% } %>
              <div class="size-circle" data-size="<%= sizeNumber %>" data-price="<%= sizePrice %>" onclick="handleSizeClick(this)">
                <div class="size-number"><%= sizeNumber %></div>
                <div class="size-price"><%= sizePrice %>€</div>
              </div>
              <% if (sizeUnit) { %>
              <div class="size-unit"><%= sizeUnit.trim() %></div>
              <% } %>
            </div>
            <% }); %>
            <% } else { %>
            <p>Universal Größe</p>
            <% } %>
          </div>
          <div class="availability mt-10">Availability: <%= product.availability %></div>
        </div>
        <button class="add-to-cart-button" data-pizza='<%= JSON.stringify(product) %>'>
          In den Warenkorb
        </button>
      </div>
    </div>
  </div>
  
