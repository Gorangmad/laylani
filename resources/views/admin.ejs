    <script>
// Earnings Line Chart
const earningsCtx = document.getElementById('lineChart').getContext('2d');
const earningsChart = new Chart(earningsCtx, {
    type: 'line',
    data: {
        labels: ['January', 'February', 'March', 'April', 'May', 'June'],
        datasets: [{
            label: 'Monthly Earnings',
            data: [0, 10000, 5000, 15000, 10000, 20000],
            backgroundColor: 'rgba(78, 115, 223, 0.05)',
            borderColor: 'rgba(78, 115, 223, 1)',
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

const donutCtx = document.getElementById('donutChart').getContext('2d');

// This plugin will create the text in the center of the Donut chart
const centerTextPlugin = {
  afterDraw: function(chart) {
    const width = chart.width,
          height = chart.height,
          ctx = chart.ctx;
    
    ctx.restore();
    const fontSize = (height / 114).toFixed(2);
    ctx.font = fontSize + "em sans-serif";
    ctx.textBaseline = "middle";
    
    const text = "102k",
          textX = Math.round((width - ctx.measureText(text).width) / 2),
          textY = height / 2;
    
    ctx.fillText(text, textX, textY);
    ctx.save();
  }
};

const donutChart = new Chart(donutCtx, {
    type: 'doughnut',
    plugins: [centerTextPlugin], // Register the plugin
    data: {
        labels: ['Ringe', 'Kette', 'Anh√§nger', 'Other Sales'],
        datasets: [{
            data: [12150, 24900, 12750, 50200],
            backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e'],
            hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf', '#f4b619'],
            hoverBorderColor: "rgba(234, 236, 244, 1)",
        }],
    },
    options: {
        maintainAspectRatio: false,
        cutoutPercentage: 80,
        legend: {
            position: 'right',
            labels: {
                boxWidth: 10
            }
        },
        tooltips: {
            enabled: true,
            mode: 'index',
            intersect: false,
        }
    }
});


